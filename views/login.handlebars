<div class="card">
    <h3 class="card-header">Login</h3>
    <form id="login-form" class="card-body">
        <label class="form-label" for="username-login">Username</label>
        <input id="username-login" type="text" autofocus="true" class="form-input" />

        <label class="form-label" for="email-login">Email:</label>
        <input id="email-login" type="email" autofocus="true" class="form-input" />

        <label class="form-label" for="password-login">Password</label>
        <input id="password-login" type="password" autofocus="true" class="form-input" />

        <button type="submit" class="btn">Login!</button>

    </form>
</div>

<div class="card">
    <h3 class="card-header">SignUp</h3>
    <form id="signup-form" class="card-body">
        <label class="form-label" for="username-signup">Username</label>
        <input id="username-signup" type="text" autofocus="true" class="form-input" />

        <label class="form-label" for="email-signup">Email:</label>
        <input id="email-signup" type="email" autofocus="true" class="form-input" />
       
        <label class="form-label" for="password-signup">Password</label>
        <input id="password-signup" type="password" autofocus="true" class="form-input" />

        <button type="submit" class="btn">SignUp!</button>

    </form>
</div>


<script src="/js/login.js" src="/js/signup/js"></script>